<% content_for :title, "Chapters" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="md:flex md:justify-between md:items-center">
    <h1 class="font-bold text-4xl">Chapters</h1>
    <%= render "shared/link_to", text: "New chapter", path: new_chapter_path, variant: :primary_button %>
  </div>

  <div id="chapters" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @chapters.any? %>
      <% @chapters.each do |chapter| %>
        <div><%= render chapter, link: true %></div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No chapters found.</p>
    <% end %>
  </div>
</div>
