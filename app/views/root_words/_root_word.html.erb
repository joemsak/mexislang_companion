<%# locals: (root_word:, link: false, informative: false) %>

<div id="<%= dom_id root_word %>" class="w-full sm:w-auto my-5">
  <% if link %>
    <%= render "shared/link_to", text: root_word.display_name, path: root_word %>
  <% else %>
    <%= root_word.display_name %>
  <% end %>

  <% if informative %>
    <div class="pl-4">
      <strong class="font-medium mb-1">Page:</strong> <%= root_word.page %>
    </div>

    <div class="pl-4">
      <strong class="font-medium mb-1">Expressions:</strong> <%= root_word.expressions.count %>
    </div>

    <div class="pl-4">
      <strong class="font-medium mb-1">Chapter:</strong>

      <%= render "shared/link_to", text: root_word.chapter_display_name, path: root_word.chapter %>
    </div>
  <% end %>
</div>
