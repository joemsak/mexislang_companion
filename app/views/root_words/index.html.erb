<% content_for :title, "Root words" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Root words</h1>
    <%= link_to "New root word", new_root_word_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="root_words" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @root_words.any? %>
      <% @root_words.each do |root_word| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render root_word %>

          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= render 'shared/link_to', text: "Show", path: root_word %>
            <%= render 'shared/link_to', text: "Edit", path: edit_root_word_path(root_word) %>
            <%= render 'shared/button_to', text: "Destroy", path: root_word, method: :delete %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No root words found.</p>
    <% end %>
  </div>
</div>
