<%# locals(variant: :default) %>
<%
  class_list = case variant
    when :default
      %(underline dark:text-white)
    when :primary_button
      %(rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium)
    when :secondary_button
      %(w-full sm:w-auto text-center rounded-md mt-2 px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium dark:text-gray-900)
    end
%>

<%= link_to text, path, class: class_list %>
