<%# locals: (text:, path:, variant: :default, size: 'font-medium', display: nil) %>
<%
  button_style = %W(#{display || 'block'} mt-2 w-full sm:w-auto text-center rounded-md px-3.5 py-2.5)
  size = Array(size)

  class_list = case variant
    when :default
      size + %W(#{display || 'inline'} underline text-blue-600 hover:text-blue-900 dark:text-white dark:hover:text-gray-600)
    when :primary_button
      button_style + size + %w(bg-blue-600 hover:bg-blue-500 text-white block)
    when :secondary_button
      button_style + size + %w(bg-gray-100 hover:bg-gray-50 dark:text-gray-900)
    end
%>

<%= link_to text, path, class: class_list %>
